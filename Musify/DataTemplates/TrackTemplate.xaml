<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="Musify.DataTemplates.TrackTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Musify.DataTemplates"
    xmlns:mdl="using:Musify.Models">

    <DataTemplate x:Key="SearchResultTemplate" x:DataType="mdl:Track">
        <Grid Padding="12">
            <Rectangle
                Width="50"
                Height="50"
                HorizontalAlignment="Left"
                RadiusX="4"
                RadiusY="4">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="{x:Bind Artwork}" />
                </Rectangle.Fill>
            </Rectangle>

            <TextBlock
                Margin="62,5,0,0"
                Style="{StaticResource FlyoutPickerTitleTextBlockStyle}"
                Text="{x:Bind Title}" />
            <TextBlock
                Margin="62,26,0,0"
                Opacity="0.8"
                Text="{x:Bind Artist}" />

            <TextBlock
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Opacity="0.8"
                Text="{x:Bind Duration, Converter={StaticResource TimeSpanStringConverter}}" />
        </Grid>
    </DataTemplate>

</ResourceDictionary>
